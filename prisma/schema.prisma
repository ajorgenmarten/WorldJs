generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Service {
  id        String   @id @default(uuid())
  /**
   * Nombre amigable y descriptivo que le quiera dar el usuario
   */
  name      String
  /**
   * Nombre que se va a usar como nombre de servicio y de contenedor en docker
   */
  slug      String   @unique
  /**
   * Esta es la ruta donde se ecuentra el proyecto
   */
  port      Int      @default(80)
  /**
   * Indica si el servicio está expuesto públicamente o no.
   */
  exposed   Boolean  @default(false)
  /**
   * Fecha de creación del servicio
   */
  createdAt DateTime @default(now())
  /**
   * Fecha de actualización del servicio
   */
  updatedAt DateTime @updatedAt

  BuildiableService BuildiableService?

  PostgresService PostgresService?
}

model BuildiableService {
  serviceId    String  @unique
  /**
   * Esta es la ruta donde se ecuentra el proyecto
   */
  folderPath   String
  /**
   * A partir de esta ruta es desde donde se van a ejecutar los comando en caso de haber alguno
   */
  rootDir      String?
  /**
   * Comando que se va a ejecutar para construir el proyecto
   */
  buildCommand String?
  /**
   * URL de acceso  en caso de que se quiera definir alguna
   */
  url          String? @unique
  /**
   * Variables de entorno que se van a usar en el servicio
   */
  envVars      Json?

  Service Service @relation(fields: [serviceId], references: [id])

  StaticService StaticService?

  NodeJsService NodejsService?
}

model StaticService {
  buildiableServiceId String  @unique
  /**
   * En el contexto de despliegue web (por ejemplo, usando Apache o Nginx), la "ruta donde se va a publicar el proyecto" normalmente se refiere al path base o base URL desde donde tu aplicación será accesible públicamente. Por ejemplo:
   * Si tu aplicación se sirve desde https://midominio.com/miapp, la ruta base es /miapp.
   * Si se sirve desde la raíz (https://midominio.com/), la ruta base es /.
   */
  publishDir          String?

  BuildiableService BuildiableService @relation(fields: [buildiableServiceId], references: [serviceId])
}

model PostgresService {
  serviceId String  @unique
  /**
   * Nombre de usuario para conectarse a la base de datos
   */
  user      String  @default("postgres")
  /**
   * Constrasena para conectarse a la base de datos
   */
  password  String
  /**
   * Nombre de la base de datos que se va a crear por defecto
   */
  database  String?

  Service Service @relation(fields: [serviceId], references: [id])
}

model NodejsService {
  buildiableServiceId String @unique
  /**
   * Comando para empezar a correr el servicio
   */
  startCommand        String

  BuildiableService BuildiableService @relation(fields: [buildiableServiceId], references: [serviceId])
}
